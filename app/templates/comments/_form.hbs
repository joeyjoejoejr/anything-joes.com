<span class="glyphicon glyphicon-remove pull-right remove-comment" {{action "closeComment"}}></span>
<form {{action "createComment" on="submit"}}>
  <div class="form-group">
    {{input value=author placeholder="Name" size="20" class="form-control"}}
  </div>

  <div class="form-group">
    {{textarea value=comment rows="3" class="form-control"}}
  </div>
  <button type="submit" class="btn btn-default">Post Comment</button>
</form>
